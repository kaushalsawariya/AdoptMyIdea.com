<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | SMG Electric</title>
    <%- include('partials/head-links') %>
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="auth-container">
        <div class="container">
            <div class="auth-card">
                <div class="text-center">
                    <img src="/images/logo/SMG-1.png" alt="SMG Electric" class="auth-logo">
                    <h2 class="auth-title">Welcome Back</h2>
                </div>

                <%- include('partials/alert') %>

                <form id="loginForm" action="/login" method="POST" class="needs-validation" novalidate>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                        <label for="email">Email address</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        <label for="password">Password</label>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="remember">
                        <label class="form-check-label" for="remember">Remember me</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        Sign In
                    </button>

                    <div class="text-center">
                        <a href="/forgot-password" class="text-muted">Forgot password?</a>
                        <p class="mt-3 mb-0">Don't have an account? <a href="/signup">Sign Up</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>