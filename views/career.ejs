<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Careers | SMG Electric</title>
    <%- include('partials/head-links') %>

    <style>
        :root {
            --primary-color: #00d09c;
            --secondary-color: #5367ff;
            --dark-color: #1e2232;
            --text-color: #44475b;
            --light-color: #ffffff;
            --gray-color: #f6f6f8;
        }

        .career-hero {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)),
                        url('/images/careers/hero-bg.jpg');
            background-size: cover;
            background-position: center;
            height: 500px;
            display: flex;
            align-items: center;
            margin-top: 76px;
            position: relative;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 16px;
            padding: 2rem;
            text-align: center;
            color: white;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .job-card {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
            border: 1px solid var(--gray-color);
        }

        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .intern-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .intern-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .intern-image {
            height: 200px;
            overflow: hidden;
        }

        .intern-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .intern-card:hover .intern-image img {
            transform: scale(1.1);
        }

        .badge-custom {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 500;
        }

        @media (max-width: 768px) {
            .career-hero {
                height: 400px;
                margin-top: 60px;
                text-align: center;
            }

            .stat-card {
                margin-bottom: 1rem;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <section class="career-hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h1 class="display-4 text-white fw-bold mb-4">Join Our Mission</h1>
                    <p class="lead text-white mb-5">Be part of the electric revolution and help shape the future of sustainable mobility.</p>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-number">50+</div>
                                <div>Open Positions</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-number">200+</div>
                                <div>Team Members</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-number">5</div>
                                <div>Office Locations</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Job Openings Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="fw-bold mb-4">Current Openings</h2>
            <div class="row">
                <div class="col-lg-8">
                    <div class="job-card">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h3 class="h5 mb-1">Senior Software Engineer</h3>
                                <p class="text-muted mb-2">Bangalore, India</p>
                            </div>
                            <span class="badge badge-custom bg-primary">Full Time</span>
                        </div>
                        <p class="mb-3">Join our tech team to build innovative solutions for electric vehicles.</p>
                        <button class="btn btn-outline-primary">Apply Now</button>
                    </div>

                    <div class="job-card">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h3 class="h5 mb-1">Product Designer</h3>
                                <p class="text-muted mb-2">Mumbai, India</p>
                            </div>
                            <span class="badge badge-custom bg-primary">Full Time</span>
                        </div>
                        <p class="mb-3">Design the future of electric mobility with us.</p>
                        <button class="btn btn-outline-primary">Apply Now</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Internship Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="fw-bold mb-4">Internship Programs</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="intern-card">
                        <div class="intern-image">
                            <img src="/images/careers/intern-engineering.jpg" alt="Engineering Internship">
                        </div>
                        <div class="p-4">
                            <h3 class="h5 mb-2">Engineering Intern</h3>
                            <p class="text-muted mb-3">Learn and work with cutting-edge EV technology</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-success">6 Months</span>
                                <button class="btn btn-sm btn-primary">Apply</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="intern-card">
                        <div class="intern-image">
                            <img src="/images/careers/intern-design.jpg" alt="Design Internship">
                        </div>
                        <div class="p-4">
                            <h3 class="h5 mb-2">Design Intern</h3>
                            <p class="text-muted mb-3">Create innovative mobility solutions</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-success">4 Months</span>
                                <button class="btn btn-sm btn-primary">Apply</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="intern-card">
                        <div class="intern-image">
                            <img src="/images/careers/intern-marketing.jpg" alt="Marketing Internship">
                        </div>
                        <div class="p-4">
                            <h3 class="h5 mb-2">Marketing Intern</h3>
                            <p class="text-muted mb-3">Drive our brand growth strategies</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-success">3 Months</span>
                                <button class="btn btn-sm btn-primary">Apply</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle apply button clicks
            const applyButtons = document.querySelectorAll('.btn-primary, .btn-outline-primary');
            applyButtons.forEach(button => {
                button.addEventListener('click', function() {
                    alert('Application form coming soon!');
                });
            });

            // Add loading state for images
            const images = document.querySelectorAll('.intern-image img');
            images.forEach(img => {
                img.style.opacity = '0';
                img.style.transition = 'opacity 0.3s ease';
                img.onload = function() {
                    img.style.opacity = '1';
                }
            });
        });
    </script>
</body>
</html>