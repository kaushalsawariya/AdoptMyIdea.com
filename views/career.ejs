<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Careers | SMG Electric</title>
    <%- include('partials/head-links') %>

    <style>
        :root {
            --primary-color: #1a237e; /* Changed to dark blue */
            --secondary-color: #283593;
            --dark-color: #1e2232;
            --text-color: #44475b;
            --light-color: #ffffff;
            --gray-color: #f6f6f8;
            --accent-blue: #2962ff; /* Added accent blue */
        }

        .career-hero {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)),
                        url('/images/careers/hero-bg.jpg');
            background-size: cover;
            background-position: center;
            height: 400px;
            display: flex;
            align-items: center;
            margin-top: 76px;
        }

        .career-tab {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .career-tab.active {
            border-color: var(--primary-color);
            box-shadow: 0 4px 20px rgba(26, 35, 126, 0.15); /* Updated shadow color */
        }

        .career-tab:hover {
            transform: translateY(-5px);
        }

        .career-icon {
            width: 60px;
            height: 60px;
            background: rgba(26, 35, 126, 0.1); /* Updated background */
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }

        .text-primary {
            color: var(--primary-color) !important; /* Updated icon color */
        }

        .position-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
            border: 1px solid var(--gray-color);
        }

        .position-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(26, 35, 126, 0.1); /* Updated hover effects with blue shadow */
        }

        .badge-custom {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 500;
        }

        .badge-custom.bg-primary {
            background-color: var(--primary-color) !important;
        }

        .badge-custom.bg-success {
            background-color: var(--accent-blue) !important; /* Changed success badge to blue */
        }

        .btn-outline-primary {
            color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-outline-primary:hover {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
        }

        .benefits-section {
            background: rgba(26, 35, 126, 0.03);
            border-radius: 8px;
            padding: 1.5rem;
        }

        .benefits-section .fas.fa-check-circle {
            color: var(--accent-blue) !important;
        }

        .benefits-section .d-flex {
            font-size: 0.95rem;
        }

        @media (max-width: 768px) {
            .career-hero {
                height: 400px;
                margin-top: 60px;
                text-align: center;
            }

            .benefits-section .row > div {
                margin-bottom: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <section class="career-hero">
        <div class="container">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bold mb-4">Join Our Team</h1>
                <p class="lead mb-0">Be part of the electric revolution</p>
            </div>
        </div>
    </section>

    <!-- Career Options -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row g-4 mb-5">
                <!-- Career Tab -->
                <div class="col-md-6">
                    <div class="career-tab active" onclick="showSection('careers')">
                        <div class="career-icon">
                            <i class="fas fa-briefcase fa-2x text-primary"></i>
                        </div>
                        <h3 class="h4 mb-2">Full-Time Positions</h3>
                        <p class="text-muted mb-0">Join our team and build your career with us</p>
                    </div>
                </div>
                <!-- Internship Tab -->
                <div class="col-md-6">
                    <div class="career-tab" onclick="showSection('internships')">
                        <div class="career-icon">
                            <i class="fas fa-graduation-cap fa-2x text-primary"></i>
                        </div>
                        <h3 class="h4 mb-2">Internship Program</h3>
                        <p class="text-muted mb-0">Learn and grow with industry experts</p>
                    </div>
                </div>
            </div>

            <!-- Career Positions -->
            <div id="careers-section">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <h2 class="text-center mb-4">Open Positions</h2>
                        
                        <!-- Position Cards -->
                        <div class="position-card">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h3 class="h5 mb-1">Senior Software Engineer</h3>
                                    <p class="text-muted mb-2">Manesar, Haryana</p>
                                </div>
                                <span class="badge badge-custom bg-primary">Full Time</span>
                            </div>
                            <p class="mb-3">Join our tech team to build innovative solutions for electric vehicles.</p>
                            
                            <!-- Added Benefits Section -->
                            <div class="benefits-section mb-4">
                                <h6 class="mb-3"><i class="fas fa-gift text-primary me-2"></i>Benefits & Perks</h6>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            <span>Competitive Salary Package</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            <span>Health Insurance</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            <span>Stock Options</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            <span>Flexible Work Hours</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-outline-primary">Apply Now</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Internship Positions -->
            <div id="internships-section" style="display: none;">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <h2 class="text-center mb-4">Internship Opportunities</h2>
                        
                        <!-- Internship Cards -->
                        <div class="position-card">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h3 class="h5 mb-1">Engineering Intern</h3>
                                    <p class="text-muted mb-2">6 Months â€¢ Manesar</p>
                                </div>
                                <span class="badge badge-custom bg-success">Internship</span>
                            </div>
                            <p class="mb-3">Work with cutting-edge EV technology and learn from industry experts.</p>
                            
                            <!-- Added Benefits Section -->
                            <div class="benefits-section mb-4">
                                <h6 class="mb-3"><i class="fas fa-gift text-primary me-2"></i>Internship Perks</h6>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            <span>Monthly Stipend</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            <span>Certificate of Completion</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            <span>Mentorship Program</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            <span>PPO Opportunity</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-outline-primary">Apply Now</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
        function showSection(section) {
            // Update tab styles
            document.querySelectorAll('.career-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            const clickedTab = event.currentTarget;
            clickedTab.classList.add('active');

            // Show/hide sections
            document.getElementById('careers-section').style.display = 
                section === 'careers' ? 'block' : 'none';
            document.getElementById('internships-section').style.display = 
                section === 'internships' ? 'block' : 'none';
        }

        // Add click handlers for both career and internship buttons
        document.addEventListener('DOMContentLoaded', function() {
            // Career section apply buttons
            document.querySelectorAll('#careers-section .btn-outline-primary').forEach(button => {
                button.addEventListener('click', function() {
                    const positionCard = this.closest('.position-card');
                    const positionTitle = positionCard.querySelector('.h5').textContent;
                    window.location.href = `/job-application?position=${encodeURIComponent(positionTitle)}`;
                });
            });

            // Internship section apply buttons
            document.querySelectorAll('#internships-section .btn-outline-primary').forEach(button => {
                button.addEventListener('click', function() {
                    const positionCard = this.closest('.position-card');
                    const positionTitle = positionCard.querySelector('.h5').textContent;
                    window.location.href = `/internship-application?position=${encodeURIComponent(positionTitle)}`;
                });
            });
        });
    </script>
</body>
</html>