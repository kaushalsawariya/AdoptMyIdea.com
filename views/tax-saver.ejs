<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tax Saver Calculator | SMG Electric</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #00d09c;
            --secondary-color: #5367ff;
            --dark-bg: #1e2232;
            --text-color: #44475b;
            --light-color: #ffffff;
        }

        body {
            background: linear-gradient(135deg, var(--dark-bg), #2a3042);
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            padding-top: 76px;
        }

        .calculator-header {
            background: var(--light-color);
            padding: 1rem 0;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        }

        .logo-wrapper {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .logo-image {
            height: 40px;
            width: auto;
            object-fit: contain;
        }

        .calculator-title {
            color: var(--text-color);
            font-size: 1.1rem;
            font-weight: 500;
            padding-left: 1rem;
            border-left: 1px solid #eee;
        }

        .card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
            max-width: 90%;
            width: 500px;
            margin: 2rem auto;
            padding: 2rem;
            border-radius: 24px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            position: relative;
            overflow: hidden;
            border: none;
        }

        @keyframes shine {
            0% { transform: translateX(-100%) rotate(45deg); }
            100% { transform: translateX(100%) rotate(45deg); }
        }

        h2 {
            font-size: 28px;
            font-weight: 700;
            color: var(--dark-bg);
            margin-bottom: 30px;
            position: relative;
        }

        h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 4px;
            background: var(--primary-color);
            border-radius: 2px;
        }

        .form-control {
            border: 2px solid #eee;
            border-radius: 12px;
            padding: 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(238, 238, 238, 0.5);
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(0, 208, 156, 0.1);
            transform: translateY(-2px);
        }

        .btn-calculate {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 12px;
            padding: 1rem;
            font-size: 1rem;
            font-weight: 600;
            border: none;
            color: white;
            transition: all 0.3s ease;
        }

        .btn-calculate:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 208, 156, 0.2);
        }

        .result-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            margin-top: 1.5rem;
            border: 1px solid #eee;
            transform-origin: top;
        }

        .savings-amount {
            font-size: 32px;
            font-weight: 700;
            color: var(--primary-color);
            margin: 15px 0;
            text-align: center;
        }

        .tax-detail {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border-bottom: 1px solid #eee;
        }

        @media (max-width: 576px) {
            .calculator-header {
                padding: 0.8rem 0;
            }

            .logo-image {
                height: 32px;
            }

            .calculator-title {
                font-size: 0.9rem;
            }

            .card {
                margin: 1rem auto;
                padding: 1.5rem;
            }

            h2 {
                font-size: 24px;
            }

            .savings-amount {
                font-size: 28px;
            }
        }

        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }

        .card {
            animation: float 6s ease-in-out infinite;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="calculator-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="logo-wrapper">
                    <a href="/">
                        <img src="/images/logo/SMG-1.png" alt="SMG Logo" class="logo-image">
                    </a>
                    <span class="calculator-title">Tax Saver Calculator</span>
                </div>
                <a href="/" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-home me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="card animate__animated animate__fadeIn">
            <div class="card-body">
                <h2 class="text-center mb-4">
                    <i class="fas fa-piggy-bank text-primary me-2"></i>
                    Calculate Your Tax Savings
                </h2>
                
                <div class="mb-4">
                    <label for="vehiclePrice" class="form-label">
                        <i class="fas fa-tag me-2"></i>Vehicle Price (₹0 - ₹1 Crore):
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">₹</span>
                        <input type="number" 
                               id="vehiclePrice" 
                               class="form-control" 
                               placeholder="Enter vehicle price"
                               autocomplete="off">
                    </div>
                </div>
                
                <button class="btn btn-calculate w-100 mb-4" onclick="calculateSavings()">
                    <i class="fas fa-calculator me-2"></i>Calculate Savings
                </button>

                <div id="result" class="mt-3"></div>
            </div>
        </div>
    </div>

    <script>
    function calculateSavings() {
        let price = document.getElementById("vehiclePrice").value;

        if (price < 0 || price > 10000000 || isNaN(price) || price === "") {
            document.getElementById("result").innerHTML = `
                <div class="alert alert-danger animate__animated animate__shakeX">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="me-2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="15" y1="9" x2="9" y2="15"></line>
                        <line x1="9" y1="9" x2="15" y2="15"></line>
                    </svg>
                    Please enter a valid price between ₹0 - ₹1 crore
                </div>`;
            return;
        }

        let evTax = price * 0.05;
        let iceTax = price * 0.28;
        let savings = iceTax - evTax;

        document.getElementById("result").innerHTML = `
            <div class="result-card animate__animated animate__fadeInUp">
                <div class="savings-amount">
                    ₹${savings.toLocaleString()}
                    <div class="fs-6 text-muted">Total Tax Savings</div>
                </div>
                <div class="tax-detail">
                    <span>GST on EV</span>
                    <span class="text-success">₹${evTax.toLocaleString()}</span>
                </div>
                <div class="tax-detail">
                    <span>GST on ICE Vehicle</span>
                    <span class="text-danger">₹${iceTax.toLocaleString()}</span>
                </div>
            </div>
        `;
    }

    // Add input validation
    document.getElementById("vehiclePrice").addEventListener("input", function(e) {
        if (this.value > 10000000) {
            this.value = 10000000;
        }
        if (this.value < 0) {
            this.value = 0;
        }
    });
</script>

</body>
</html>