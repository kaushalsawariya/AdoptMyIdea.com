<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up | SMG Electric</title>
    <%- include('partials/head-links') %>
    <style>
        .auth-section {
            margin-top: 76px;
            min-height: calc(100vh - 76px);
            display: flex;
            align-items: center;
            background: linear-gradient(135deg, var(--light-color) 0%, var(--gray-color) 100%);
        }

        .auth-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0,0,0,0.1);
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255,255,255,0.3);
            padding: 2rem;
        }

        .brand-logo {
            font-size: 2rem;
            font-weight: 800;
            color: #1a237e;
            text-align: center;
            margin-bottom: 2rem;
        }

        .form-control:focus {
            border-color: #1a237e;
            box-shadow: 0 0 0 0.2rem rgba(26,35,126,0.25);
        }

        .btn-primary {
            background-color: #1a237e;
            border-color: #1a237e;
        }

        .btn-primary:hover {
            background-color: #151b4f;
            border-color: #151b4f;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <section class="auth-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="auth-card">
                        <div class="brand-logo">SMG</div>
                        <h2 class="text-center mb-4">Create Account</h2>
                        
                        <form id="signupForm" action="/signup" method="POST">
                            <% if (locals.error) { %>
                                <div class="alert alert-danger">
                                    <%= error %>
                                </div>
                            <% } %>
                            
                            <% if (locals.errors) { %>
                                <div class="alert alert-danger">
                                    <ul>
                                        <% errors.forEach(error => { %>
                                            <li><%= error.msg %></li>
                                        <% }); %>
                                    </ul>
                                </div>
                            <% } %>

                            <div class="mb-3">
                                <label class="form-label">Full Name</label>
                                <input type="text" 
                                       name="name" 
                                       class="form-control" 
                                       required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email address</label>
                                <input type="email" 
                                       name="email" 
                                       class="form-control" 
                                       required>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" 
                                       name="password" 
                                       class="form-control" 
                                       required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Confirm Password</label>
                                <input type="password" 
                                       name="confirmPassword" 
                                       class="form-control" 
                                       required>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="terms" required>
                                <label class="form-check-label" for="terms">
                                    I agree to the <a href="/terms">Terms</a> and <a href="/privacy">Privacy Policy</a>
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mb-3">
                                Create Account
                            </button>

                            <div class="text-center">
                                <p class="mb-0">Already have an account? <a href="/login">Sign In</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
        document.getElementById('signupForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const password = this.password.value;
            const confirmPassword = this.confirmPassword.value;

            if (password !== confirmPassword) {
                alert('Passwords do not match!');
                return;
            }

            this.submit();
        });
    </script>
</body>
</html>